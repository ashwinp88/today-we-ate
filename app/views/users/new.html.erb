<% email_value = params[:email].presence || @user.email %>
<% error_message = if @user.errors.any?
    @user.errors.full_messages.to_sentence
  elsif flash[:alert].present?
    flash[:alert]
  end %>

<div class="flex w-full justify-center px-4">
  <div class="auth-card space-y-6 text-white sm:space-y-8" style="background-image: linear-gradient(to bottom, rgba(0,0,0,0.25), transparent);">
    <div class="space-y-2 text-center">
      <p class="theme-heading text-4xl font-semibold tracking-tight sm:text-5xl">Today we ate..</p>
      <p class="theme-subtext text-base font-medium">Finish setting up your account.</p>
    </div>

    <% if error_message.present? %>
      <div class="rounded-2xl border border-red-300/50 bg-white/10 px-4 py-3 text-sm font-semibold text-red-100">
        <p class="text-center"><%= error_message %></p>
      </div>
    <% end %>

    <%= form_with model: @user, url: email_signup_path, class: "space-y-4" do |f| %>
      <div>
        <%= f.label :name, "Name", class: "sr-only" %>
        <%= f.text_field :name, required: true, autocomplete: "name", placeholder: "Full name", class: "auth-input" %>
      </div>
      <div>
        <%= f.label :email, "Email", class: "sr-only" %>
        <%= f.email_field :email, required: true, autocomplete: "email", value: email_value, placeholder: "you@example.com", class: "auth-input" %>
      </div>
      <div data-controller="password-visibility" class="relative">
        <%= f.label :password, "Password", class: "sr-only" %>
        <%= f.password_field :password, required: true, autocomplete: "new-password", placeholder: "Create a password", class: "auth-input pr-16", data: { password_visibility_target: "input" } %>
        <button type="button" class="absolute inset-y-0 right-4 text-[0.65rem] font-semibold uppercase tracking-[0.3em] text-slate-600 hover:text-slate-800" data-action="password-visibility#toggle" data-password-visibility-target="toggle" aria-pressed="false">
          Show
        </button>
      </div>
      <div data-controller="password-visibility" class="relative">
        <%= f.label :password_confirmation, "Confirm password", class: "sr-only" %>
        <%= f.password_field :password_confirmation, required: true, autocomplete: "new-password", placeholder: "Confirm password", class: "auth-input pr-16", data: { password_visibility_target: "input" } %>
        <button type="button" class="absolute inset-y-0 right-4 text-[0.65rem] font-semibold uppercase tracking-[0.3em] text-slate-600 hover:text-slate-800" data-action="password-visibility#toggle" data-password-visibility-target="toggle" aria-pressed="false">
          Show
        </button>
      </div>
      <button type="submit" class="flex w-full items-center justify-center gap-2 rounded-full bg-slate-900 px-5 py-3 text-base font-semibold text-white shadow-xl shadow-slate-900/30 transition hover:-translate-y-0.5 hover:bg-slate-800 sm:px-6 sm:py-4 sm:text-lg">
        Create account
        <svg class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M5 12h14" /><path d="m13 6 6 6-6 6" /></svg>
      </button>
    <% end %>

  </div>
</div>

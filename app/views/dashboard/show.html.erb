<% if user_signed_in? %>
  <section class="dashboard-hero">
    <picture class="hero-banner">
      <source type="image/webp" srcset="<%= asset_path('banner-800.webp') %> 800w, <%= asset_path('banner-1600.webp') %> 1600w, <%= asset_path('banner-2400.webp') %> 2400w" sizes="(max-width: 640px) 100vw, 1100px" />
      <img src="<%= asset_path('banner-1600.jpg') %>" alt="Meals collage" class="banner-img" loading="lazy" />
    </picture>
    <div>
      <p class="eyebrow">Today We Ate</p>
      <h1>Welcome back, <%= current_user.first_name %>.</h1>
      <p>Track every bite, spot the ruts, and keep meals exciting.</p>
      <div class="hero-actions">
        <%= link_to "See full history", meals_path, class: "btn ghost" %>
      </div>
    </div>
  </section>

  <div class="grid two-columns">
    <section class="panel">
      <header class="panel-header">
        <h2>Log a meal</h2>
        <p class="muted">Add what you ate and how it went.</p>
      </header>
      <%= render "meals/form", meal: @meal %>
    </section>

    <section class="panel">
      <header class="panel-header">
        <h2>Top picks</h2>
        <p class="muted">What you reach for the most.</p>
      </header>
      <div class="stats-grid">
        <% @top_meals.each do |period, meals| %>
          <div>
            <h3 class="eyebrow"><%= period.to_s.capitalize %></h3>
            <% if meals.any? %>
              <ul class="stat-list">
                <% meals.each do |item| %>
                  <li><strong><%= item[:name] %></strong> <span><%= item[:total] %>x</span></li>
                <% end %>
              </ul>
            <% else %>
              <p class="muted">No data yet.</p>
            <% end %>
          </div>
        <% end %>
      </div>
    </section>
  </div>

  <div class="grid two-columns">
    <section class="panel">
      <header class="panel-header">
        <h2>Haven't had in a while</h2>
        <p class="muted">Great meals waiting for a comeback.</p>
      </header>
      <% if @overdue_favorites.any? %>
        <ul class="stat-list">
          <% @overdue_favorites.each do |item| %>
            <li>
              <div>
                <strong><%= item[:name] %></strong>
                <p class="muted">Last ate <%= item[:last_ate_on].to_fs(:long) %></p>
              </div>
              <span class="pill"><%= item[:total_logged] %> logged</span>
            </li>
          <% end %>
        </ul>
      <% else %>
        <p class="muted">We'll highlight meals once you've logged a few.</p>
      <% end %>
    </section>

    <section class="panel">
      <header class="panel-header">
        <h2>Sourcing mix</h2>
        <p class="muted">Home vs. takeout vs. restaurants (30 days).</p>
      </header>
      <ul class="stat-list">
        <% @source_distribution.each do |source, total| %>
          <li>
            <strong><%= source.titleize %></strong>
            <span class="pill"><%= total %></span>
          </li>
        <% end %>
      </ul>
    </section>
  </div>

  <section class="panel">
    <header class="panel-header">
      <h2>Recent meals</h2>
      <p class="muted">The last few things you logged.</p>
    </header>
    <% if @recent_meals.any? %>
      <ul class="recent-list">
        <% @recent_meals.each do |meal| %>
          <li>
            <div>
              <strong><%= meal.name %></strong>
              <p class="muted"><%= meal.ate_on.to_fs(:long) %> Â· <%= meal.source.titleize %></p>
            </div>
            <div class="rating-pill"><%= meal.rating %> / 5</div>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p class="muted">No meals yet. Log your first one to start a streak.</p>
    <% end %>
  </section>
<% else %>
  <section class="hero landing-alone full-bleed">
    <div class="full-bg" style="--bg-url: url('<%= asset_path(session_background_asset) if session_background_asset.present? %>')"></div>
    <div class="landing-content">
      <div class="landing-hero-text">
        <div class="hero-lines">
          <span>Today we</span>
          <span>Ate..</span>
        </div>
        <p class="hero-highlight">Track your meals and discover your tastes!</p>
      </div>
      <div class="landing-form">
        <%= form_with url: preauth_path, method: :post, id: "preauth-form", class: "email-capture column" do |f| %>
          <%= email_field_tag :email, params[:email], placeholder: "you@example.com", required: true %>
        <% end %>
        <div class="cta-row-equal">
          <%= link_to "/auth/google_oauth2", class: "btn secondary with-icon", data: { turbo: false }, aria: { label: "Continue with Google" } do %>
            <span class="btn-label">continue with</span>
            <span class="btn-icon" aria-hidden="true">
              <svg width="22" height="22" viewBox="0 0 48 48" xmlns="http://www.w3.org/2000/svg">
                <path fill="#FFC107" d="M43.611 20.083H42V20H24v8h11.303c-1.649 4.657-6.08 8-11.303 8-6.627 0-12-5.373-12-12s5.373-12 12-12c3.059 0 5.843 1.154 7.961 3.039l5.657-5.657C35.165 6.053 29.841 4 24 4 12.954 4 4 12.954 4 24s8.954 20 20 20 20-8.954 20-20c0-1.341-.138-2.651-.389-3.917z"/>
                <path fill="#FF3D00" d="M6.306 14.691l6.571 4.817C14.3 16.108 18.77 12 24 12c3.059 0 5.843 1.154 7.961 3.039l5.657-5.657C35.165 6.053 29.841 4 24 4 16.318 4 9.706 8.337 6.306 14.691z"/>
                <path fill="#4CAF50" d="M24 44c5.162 0 9.86-1.977 13.409-5.197l-6.19-5.238C29.17 35.262 26.739 36 24 36c-5.205 0-9.62-3.317-11.281-7.946l-6.532 5.032C9.55 39.556 16.226 44 24 44z"/>
                <path fill="#1976D2" d="M43.611 20.083H42V20H24v8h11.303c-.792 2.237-2.27 4.166-4.084 5.565.001-.001 6.19 5.238 6.19 5.238C39.064 35.258 44 30.055 44 24c0-1.341-.138-2.651-.389-3.917z"/>
              </svg>
            </span>
          <% end %>
          <button type="submit" form="preauth-form" class="btn light with-icon" aria-label="Continue">
            <span class="btn-label">continue</span>
            <span class="btn-icon" aria-hidden="true">
              <svg width="22" height="22" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M5 12h14M13 5l7 7-7 7" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </span>
          </button>
          <% unless Rails.env.production? %>
            <%= link_to "developer sign in", "/auth/developer", class: "btn ghost dev-link", data: { turbo: false } %>
          <% end %>
        </div>
        <p class="trust-note">No credit card required. Cancel anytime.</p>
      </div>
    </div>
  </section>
<% end %>

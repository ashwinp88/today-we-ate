<% if user_signed_in? %>
  <% card = "rounded-2xl border border-white/40 bg-white/85 p-6 shadow-sm backdrop-blur" %>

  <section class="mb-10 rounded-3xl border border-white/60 bg-white/85 p-8 shadow-xl backdrop-blur">
    <div class="flex flex-col gap-6 md:flex-row md:items-center md:justify-between">
      <div>
        <p class="text-xs font-semibold uppercase tracking-[0.45em] text-indigo-500">Today We Ate</p>
        <h1 class="mt-3 text-3xl font-bold text-slate-900">Welcome back, <%= current_user.first_name %>.</h1>
        <p class="mt-4 text-lg text-slate-600">Track every bite, spot the ruts, and keep meals exciting.</p>
      </div>
      <div class="flex flex-wrap gap-3 text-sm font-semibold">
        <%= link_to "See full history", meals_path, class: "rounded-full border border-slate-300 px-4 py-2 text-slate-700 hover:bg-slate-100" %>
        <%= link_to "Log a meal", new_meal_path, class: "rounded-full bg-indigo-600 px-4 py-2 text-white shadow-lg hover:bg-indigo-500" %>
      </div>
    </div>
  </section>

  <div class="grid gap-6 md:grid-cols-2">
    <section class="<%= card %>">
      <header class="mb-4">
        <p class="text-xs font-semibold uppercase tracking-[0.3em] text-indigo-500">New entry</p>
        <h2 class="mt-1 text-xl font-semibold text-slate-900">Log a meal</h2>
        <p class="text-sm text-slate-500">Add what you ate and how it went.</p>
      </header>
      <%= render "meals/form", meal: @meal %>
    </section>

    <section class="<%= card %>">
      <header class="mb-4">
        <p class="text-xs font-semibold uppercase tracking-[0.3em] text-indigo-500">Favorites</p>
        <h2 class="mt-1 text-xl font-semibold text-slate-900">Top picks</h2>
        <p class="text-sm text-slate-500">What you reach for the most.</p>
      </header>
      <div class="grid gap-4 md:grid-cols-3">
        <% @top_meals.each do |period, meals| %>
          <div>
            <h3 class="text-xs font-semibold uppercase tracking-widest text-slate-500"><%= period.to_s.capitalize %></h3>
            <% if meals.any? %>
              <ul class="mt-2 space-y-2">
                <% meals.each do |item| %>
                  <li class="flex items-center justify-between rounded-xl border border-slate-100 bg-white/70 px-3 py-2 text-sm font-medium text-slate-700">
                    <span><%= item[:name] %></span>
                    <span class="text-slate-400"><%= item[:total] %>Ã—</span>
                  </li>
                <% end %>
              </ul>
            <% else %>
              <p class="mt-2 text-sm text-slate-500">No meals recorded for this period yet.</p>
            <% end %>
          </div>
        <% end %>
      </div>
    </section>
  </div>
<% else %>
  <section class="relative isolate flex min-h-screen flex-col justify-center overflow-hidden">
    <% if session_background_asset.present? %>
      <%= image_tag asset_path(session_background_asset), class: "absolute inset-0 h-full w-full object-cover" %>
    <% else %>
      <div class="absolute inset-0 h-full w-full bg-gradient-to-br from-slate-200 to-slate-400"></div>
    <% end %>
    <div class="absolute inset-0 bg-gradient-to-r from-slate-900/70 via-slate-900/40 to-slate-900/10"></div>

    <div class="relative z-10 mx-auto flex w-full max-w-6xl flex-col gap-12 px-6 py-16 lg:flex-row lg:items-center">
      <div class="space-y-4 text-white lg:w-1/2">
        <span class="block w-fit text-4xl font-semibold md:text-5xl">
          <span class="glassy-chip rounded px-4 py-1 text-slate-900">Today we</span>
        </span>
        <span class="block w-fit text-4xl font-semibold md:text-5xl">
          <span class="glassy-chip rounded px-4 py-1 text-slate-900">Ate..</span>
        </span>
        <p class="mt-4 w-fit text-lg font-semibold">
          <span class="glassy-chip glassy-chip--subtle rounded px-4 py-1 text-slate-900">Track your meals and discover your tastes!</span>
        </p>
      </div>

      <div class="w-full max-w-md rounded-[32px] border border-white/40 bg-white/85 p-8 text-slate-900 shadow-2xl">
        <%= form_with url: preauth_path, method: :post, id: "preauth-form", class: "space-y-5" do |f| %>
          <%= email_field_tag :email, params[:email], placeholder: "you@example.com", required: true, class: "w-full rounded-full border border-slate-200 px-4 py-3 text-base shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
          <div class="grid gap-3 md:grid-cols-2">
            <% if oauth_provider_enabled?(:google_oauth2) %>
              <%= link_to "/auth/google_oauth2", class: "inline-flex items-center justify-center rounded-full bg-indigo-600 px-4 py-3 text-base font-semibold text-white shadow-lg hover:bg-indigo-500", data: { turbo: false } do %>
                <span>Continue with</span>
                <span class="ml-2" aria-hidden="true">
                  <svg width="20" height="20" viewBox="0 0 48 48" xmlns="http://www.w3.org/2000/svg">
                    <path fill="#FFC107" d="M43.611 20.083H42V20H24v8h11.303c-1.649 4.657-6.08 8-11.303 8-6.627 0-12-5.373-12-12s5.373-12 12-12c3.059 0 5.843 1.154 7.961 3.039l5.657-5.657C35.165 6.053 29.841 4 24 4 16.954 4 8.342 8.337 4.942 14.691z"/>
                    <path fill="#FF3D00" d="M6.306 14.691l6.571 4.817C14.3 16.108 18.77 12 24 12c3.059 0 5.843 1.154 7.961 3.039l5.657-5.657C35.165 6.053 29.841 4 24 4 16.318 4 9.706 8.337 6.306 14.691z"/>
                    <path fill="#4CAF50" d="M24 44c5.162 0 9.86-1.977 13.409-5.197l-6.19-5.238C29.17 35.262 26.739 36 24 36c-5.205 0-9.62-3.317-11.281-7.946l-6.532 5.032C9.55 39.556 16.226 44 24 44z"/>
                    <path fill="#1976D2" d="M43.611 20.083H42V20H24v8h11.303c-.792 2.237-2.27 4.166-4.084 5.565.001-.001 6.19 5.238 6.19 5.238C39.064 35.258 44 30.055 44 24c0-1.341-.138-2.651-.389-3.917z"/>
                  </svg>
                </span>
              <% end %>
            <% end %>
            <button type="submit" form="preauth-form" class="inline-flex items-center justify-center rounded-full border border-slate-300 px-4 py-3 text-base font-semibold text-slate-800 shadow-sm hover:border-slate-400" aria-label="Continue">
              <span>Continue</span>
              <span class="ml-2" aria-hidden="true">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M5 12h14M13 5l7 7-7 7" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </span>
            </button>
          </div>
        <% end %>
        <p class="mt-6 text-center text-xs text-slate-500">No credit card required. Cancel anytime.</p>
      </div>
    </div>
  </section>
<% end %>

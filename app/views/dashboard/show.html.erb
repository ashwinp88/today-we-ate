<% card = "rounded-[28px] border border-white/40 bg-white/85 p-6 shadow-sm backdrop-blur" %>
<% hero_card = "rounded-[32px] border border-white/40 bg-white/25 p-6 text-white shadow-[0_24px_70px_rgba(15,23,42,0.35)] backdrop-blur-2xl sm:p-8" %>
<section class="mb-6 <%= hero_card %>">
  <div class="flex flex-col gap-6 md:flex-row md:items-center md:justify-between">
    <div class="space-y-3">
      <p class="text-[0.65rem] font-semibold uppercase tracking-[0.45em] text-white/70">Today we ate</p>
      <h1 class="text-4xl font-semibold leading-tight">Welcome back, <%= current_user.first_name %>.</h1>
      <p class="text-base text-white/80">Keep logging meals so your future self knows exactly what to crave.</p>
    </div>
  </div>
</section>

<div class="grid gap-5 md:grid-cols-2">
  <section class="<%= card %>">
    <header class="mb-4">
      <p class="text-xs font-semibold uppercase tracking-[0.3em] text-slate-500">New entry</p>
      <h2 class="mt-1 text-xl font-semibold text-slate-900">Log a meal</h2>
      <p class="text-sm text-slate-500">Add what you ate and how it went.</p>
    </header>
    <%= render "meals/form", meal: @meal %>
  </section>

  <section class="<%= card %>">
    <header class="mb-4">
      <p class="text-xs font-semibold uppercase tracking-[0.3em] text-slate-500">Favorites</p>
      <h2 class="mt-1 text-xl font-semibold text-slate-900">Top picks</h2>
      <p class="text-sm text-slate-500">What you reach for the most.</p>
    </header>
    <div class="grid gap-4 md:grid-cols-3">
      <% @top_meals.each do |period, meals| %>
        <div>
          <h3 class="text-xs font-semibold uppercase tracking-widest text-slate-500"><%= period.to_s.capitalize %></h3>
          <% if meals.any? %>
            <ul class="mt-2 space-y-2">
              <% meals.each do |item| %>
                <li class="flex items-center justify-between rounded-xl border border-slate-100 bg-white/70 px-3 py-2 text-sm font-medium text-slate-700">
                  <span><%= item[:name] %></span>
                  <span class="text-slate-400"><%= item[:total] %>Ã—</span>
                </li>
              <% end %>
            </ul>
          <% else %>
            <p class="mt-2 text-sm text-slate-500">No meals recorded for this period yet.</p>
          <% end %>
        </div>
      <% end %>
    </div>
  </section>
</div>

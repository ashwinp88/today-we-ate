<% if user_signed_in? %>
  <% card = "rounded-2xl border border-white/40 bg-white/85 p-6 shadow-sm backdrop-blur" %>

  <section class="mb-10 rounded-3xl border border-white/60 bg-white/85 p-8 shadow-xl backdrop-blur">
    <div class="flex flex-col gap-6 md:flex-row md:items-center md:justify-between">
      <div>
        <p class="text-xs font-semibold uppercase tracking-[0.45em] text-indigo-500">Today We Ate</p>
        <h1 class="mt-3 text-3xl font-bold text-slate-900">Welcome back, <%= current_user.first_name %>.</h1>
        <p class="mt-4 text-lg text-slate-600">Track every bite, spot the ruts, and keep meals exciting.</p>
      </div>
      <div class="flex flex-wrap gap-3 text-sm font-semibold">
        <%= link_to "See full history", meals_path, class: "rounded-full border border-slate-300 px-4 py-2 text-slate-700 hover:bg-slate-100" %>
        <%= link_to "Log a meal", new_meal_path, class: "rounded-full bg-indigo-600 px-4 py-2 text-white shadow-lg hover:bg-indigo-500" %>
      </div>
    </div>
  </section>

  <div class="grid gap-6 md:grid-cols-2">
    <section class="<%= card %>">
      <header class="mb-4">
        <p class="text-xs font-semibold uppercase tracking-[0.3em] text-indigo-500">New entry</p>
        <h2 class="mt-1 text-xl font-semibold text-slate-900">Log a meal</h2>
        <p class="text-sm text-slate-500">Add what you ate and how it went.</p>
      </header>
      <%= render "meals/form", meal: @meal %>
    </section>

    <section class="<%= card %>">
      <header class="mb-4">
        <p class="text-xs font-semibold uppercase tracking-[0.3em] text-indigo-500">Favorites</p>
        <h2 class="mt-1 text-xl font-semibold text-slate-900">Top picks</h2>
        <p class="text-sm text-slate-500">What you reach for the most.</p>
      </header>
      <div class="grid gap-4 md:grid-cols-3">
        <% @top_meals.each do |period, meals| %>
          <div>
            <h3 class="text-xs font-semibold uppercase tracking-widest text-slate-500"><%= period.to_s.capitalize %></h3>
            <% if meals.any? %>
              <ul class="mt-2 space-y-2">
                <% meals.each do |item| %>
                  <li class="flex items-center justify-between rounded-xl border border-slate-100 bg-white/70 px-3 py-2 text-sm font-medium text-slate-700">
                    <span><%= item[:name] %></span>
                    <span class="text-slate-400"><%= item[:total] %>Ã—</span>
                  </li>
                <% end %>
              </ul>
            <% else %>
              <p class="mt-2 text-sm text-slate-500">No meals recorded for this period yet.</p>
            <% end %>
          </div>
        <% end %>
      </div>
    </section>
  </div>
<% else %>
  <% background_asset = session_background_asset.presence || "banner-1600.jpg" %>
  <div class="flex w-full justify-center px-4">
    <div class="w-full max-w-2xl space-y-8 rounded-[38px] border border-white/40 bg-white/35 p-10 shadow-[0_35px_90px_rgba(15,23,42,0.4)] backdrop-blur-2xl" style="background-image: linear-gradient(to bottom, rgba(0,0,0,0.25), transparent);">
      <div class="space-y-2 text-center text-white/95">
        <p class="text-6xl font-semibold tracking-tight">Today We Ate</p>
        <p class="text-base font-medium">Track your meals and discover favorites.</p>
      </div>

      <% if oauth_provider_enabled?(:google_oauth2) %>
        <%= link_to "/auth/google_oauth2", data: { turbo: false }, class: "flex items-center justify-between rounded-full border border-slate-200 bg-white px-6 py-4 text-lg font-semibold text-slate-900 shadow-lg shadow-slate-900/10 transition hover:-translate-y-0.5 hover:shadow-2xl" do %>
          <span class="flex items-center gap-3">
            <span class="inline-flex h-8 w-8 items-center justify-center rounded-full bg-white"><%= image_tag "google.svg", alt: "Google" rescue 'G' %></span>
            Continue with Google
          </span>
          <svg class="h-5 w-5 text-slate-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M5 12h14" /><path d="m13 6 6 6-6 6" /></svg>
        <% end %>
      <% end %>

      <div class="flex items-center gap-4 text-xs font-semibold uppercase tracking-[0.35em] text-white/95">
        <span class="h-px flex-1 bg-slate-200"></span>
        <span>or continue with email</span>
        <span class="h-px flex-1 bg-slate-200"></span>
      </div>

      <%= form_with url: preauth_path, method: :post, class: "space-y-4" do %>
        <div>
          <%= label_tag :email, "Email", class: "sr-only" %>
          <%= email_field_tag :email, params[:email], required: true, autocomplete: "email", placeholder: "you@example.com", class: "w-full rounded-full border border-slate-200 bg-white px-5 py-4 text-base text-slate-900 placeholder:text-slate-400 focus:border-indigo-500 focus:outline-none focus:ring-4 focus:ring-indigo-500/20" %>
        </div>
        <button type="submit" class="flex w-full items-center justify-center gap-2 rounded-full bg-slate-900 px-6 py-4 text-lg font-semibold text-white shadow-xl shadow-slate-900/30 transition hover:-translate-y-0.5 hover:bg-slate-800">
          Continue
          <svg class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M5 12h14" /><path d="m13 6 6 6-6 6" /></svg>
        </button>
      <% end %>

      <p class="text-center text-sm font-medium text-white/95">No credit card required. Cancel anytime.</p>
    </div>
  </div>
<% end %>

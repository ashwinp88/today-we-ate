<% card = "rounded-2xl border border-white/40 bg-white/85 p-6 shadow-sm backdrop-blur" %>

<section class="mb-10 rounded-3xl border border-white/60 bg-white/85 p-8 shadow-xl backdrop-blur">
  <div class="flex flex-col gap-6 md:flex-row md:items-center md:justify-between">
    <div>
      <p class="text-xs font-semibold uppercase tracking-[0.45em] text-indigo-500">Today We Ate</p>
      <h1 class="mt-3 text-3xl font-bold text-slate-900">Welcome back, <%= current_user.first_name %>.</h1>
      <p class="mt-4 text-lg text-slate-600">Track every bite, spot the ruts, and keep meals exciting.</p>
    </div>
    <div class="flex flex-wrap gap-3 text-sm font-semibold">
      <%= link_to "See full history", meals_path, class: "rounded-full border border-slate-300 px-4 py-2 text-slate-700 hover:bg-slate-100" %>
      <%= link_to "Log a meal", new_meal_path, class: "rounded-full bg-indigo-600 px-4 py-2 text-white shadow-lg hover:bg-indigo-500" %>
    </div>
  </div>
</section>

<div class="grid gap-6 md:grid-cols-2">
  <section class="<%= card %>">
    <header class="mb-4">
      <p class="text-xs font-semibold uppercase tracking-[0.3em] text-indigo-500">New entry</p>
      <h2 class="mt-1 text-xl font-semibold text-slate-900">Log a meal</h2>
      <p class="text-sm text-slate-500">Add what you ate and how it went.</p>
    </header>
    <%= render "meals/form", meal: @meal %>
  </section>

  <section class="<%= card %>">
    <header class="mb-4">
      <p class="text-xs font-semibold uppercase tracking-[0.3em] text-indigo-500">Favorites</p>
      <h2 class="mt-1 text-xl font-semibold text-slate-900">Top picks</h2>
      <p class="text-sm text-slate-500">What you reach for the most.</p>
    </header>
    <div class="grid gap-4 md:grid-cols-3">
      <% @top_meals.each do |period, meals| %>
        <div>
          <h3 class="text-xs font-semibold uppercase tracking-widest text-slate-500"><%= period.to_s.capitalize %></h3>
          <% if meals.any? %>
            <ul class="mt-2 space-y-2">
              <% meals.each do |item| %>
                <li class="flex items-center justify-between rounded-xl border border-slate-100 bg-white/70 px-3 py-2 text-sm font-medium text-slate-700">
                  <span><%= item[:name] %></span>
                  <span class="text-slate-400"><%= item[:total] %>Ã—</span>
                </li>
              <% end %>
            </ul>
          <% else %>
            <p class="mt-2 text-sm text-slate-500">No meals recorded for this period yet.</p>
          <% end %>
        </div>
      <% end %>
    </div>
  </section>
</div>
